<!DOCTYPE html>
<html>
  <head>
    <title>CostcoCakeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div id="header-wrapper">
    <div id="header">
      <%= link_to(image_tag("costco_logo.png", alt: "Costco Logo"), root_path) %>
      <div id="header-content">
        <div id="header-nav">
          <div class="header-nav-content">
            <%= link_to "View Warehouse Savings", "https://www.costco.com/warehouse-savings.html" %>
          </div>
          <div class="header-nav-content">
            <%= link_to "Find a Warehouse", "https://www.costco.com/warehouse-locations" %>
          </div>
          <div class="header-nav-content">
            <%= link_to "Get Email Offers", root_path %>
          </div>
          <div class="header-nav-content">
            <%= link_to "Customer Service", "https://customerservice.costco.com/" %>
          </div>
          <div class="header-nav-content">

          </div>
        </div>
        <div id="header-search">
          <input type="text" id="searchbar" placeholder="Search Costco">
          <div id="signin">
            <%= link_to "Sign In / Register", new_user_session_path if !current_user %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete if current_user %>
          </div>
          <div id="cart">
            <%= link_to "Cart", "https://www.costco.com/CheckoutCartView" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="navbar">
    <div class="navbar-content">
      <%= link_to "Shop All Departments", root_path %>
    </div>
    <div class="navbar-content">
      <%= link_to "Grocery", "https://www.costco.com/grocery-household.html" %>
    </div>
    <div class="navbar-content">
      <%= link_to "Business Delivery", "https://www.costcobusinessdelivery.com/" %>
    </div>
    <div class="navbar-content">
      <%= link_to "Optical", "https://www.costco.com/optical.html" %>
    </div>
    <div class="navbar-content">
      <%= link_to "Pharmacy", "https://www.costco.com/Pharmacy/home-delivery?storeId=10301&catalogId=10701&langId=-1" %>
    </div>
    <div class="navbar-content">
      <%= link_to "Services", "https://www.costco.com/services.html" %>
    </div>
    <div class="navbar-content">
      <%= link_to "Photo", "https://www.costcophotocenter.com/Home" %>
    </div>
    <div class="navbar-content">
      <%= link_to "Travel", "https://www.costcotravel.com/?utm_source=costco.com&utm_medium=referral&utm_campaign=TopNav&utm_term=costcotravel.com&utm_content=20160621" %>
    </div>
    <div class="navbar-content">
      <%= link_to "Membership", "https://www.costco.com/join-costco.html" %>
    </div>
    <div class="navbar-content">
      <%= link_to "Location", "https://www.costco.com/warehouse-locations?langId=-1&storeId=10301&catalogId=10701" %>
    </div>
  </div>
  <% if current_user %>
    <div id="navbar2">
      <div class="navbar-content">
        <%= link_to "Admin", "/admin" if is_admin %>
      </div>
      <div class="navbar-content">
        <%= link_to "All Orders", "/all_orders" if is_employee %>
      </div>
      <div class="navbar-content">
        <%= link_to "View Orders", "/orders" if current_user %>
      </div>
    </div>
  <% end %>
  <body>
    <div class="content">
      <%= flash[:notice] %>
      <%= yield %>
    </div>
    <hr>
    <div id="footer">
      <div id="footer-links">
        <div class="footer-content">
          <%= link_to "Site Map", "https://www.costco.com/SiteMap?storeId=10301&catalogId=10701" %>
        </div>
        <div class="footer-content">
          <%= link_to "Terms and Conditions", "https://www.costco.com/terms-and-conditions-of-use.html" %>
        </div>
        <div class="footer-content">
          <%= link_to "Your Privacy Rights", "https://www.costco.com/privacy-policy.html" %>
        </div>
        <div class="footer-content">
          <%= link_to "Feedback", "https://www.costco.com/cakes-cookies.html#" %>
        </div>
      </div>
      © 1998 — 2017 Costco Wholesale Corporation. All rights reserved.
    </div>
  </body>
</html>
