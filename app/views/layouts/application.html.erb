<!DOCTYPE html>
<html>
  <head>
    <title>CostcoCakeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div id="header-wrapper">
    <div id="header">
      <%= image_tag("costco_logo.png", alt: "Costco Logo") %>
      <div id="header-content">
        <div id="header-nav">
          <div id="view-warehouse">
            <%= link_to "View Warehouse Savings", root_path %>
          </div>
          <div id="find-warehouse">
            <%= link_to "Find a Warehouse", root_path %>
          </div>
          <div id="get-email">
            <%= link_to "Get Email Offers", root_path %>
          </div>
          <div id="customer-service">
            <%= link_to "Customer Service", root_path %>
          </div>
          <div id="country">

          </div>
        </div>
        <div id="header-search">
          <input type="text" id="searchbar" placeholder="Search Costco">
          <div id="signin">
            <%= link_to "Sign In / Register", new_user_session_path %>
          </div>
          <div id="cart">
            <%= link_to "Cart", root_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="navbar">
  </div>
  <body>

    <div class="cake-nav">
      <%= link_to "Sign Up", new_user_registration_path %>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete if current_user %>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
