<!DOCTYPE html>
<html>
  <head>
    <title>CostcoCakeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div id="header-wrapper">
    <div id="header">
      <%= link_to(image_tag("costco_logo.png", alt: "Costco Logo"), root_path) %>
      <div id="header-content">
        <div id="header-nav">
          <div class="header-nav-content">
            <%= link_to "View Warehouse Savings", root_path %>
          </div>
          <div class="header-nav-content">
            <%= link_to "Find a Warehouse", root_path %>
          </div>
          <div class="header-nav-content">
            <%= link_to "Get Email Offers", root_path %>
          </div>
          <div class="header-nav-content">
            <%= link_to "Customer Service", root_path %>
          </div>
          <div class="header-nav-content">

          </div>
        </div>
        <div id="header-search">
          <input type="text" id="searchbar" placeholder="Search Costco">
          <div id="signin">
            <%= link_to "Sign In / Register", new_user_session_path if !current_user %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete if current_user %>
          </div>
          <div id="cart">
            <%= link_to "Cart", root_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="navbar">
    <div class="navbar-content">
      <%= link_to "Admin", "/admin" if is_admin %>
    </div>
    <div class="navbar-content">
      <%= link_to "All Orders", "/all_orders" if is_employee %>
    </div>
    <div class="navbar-content">
      <%= link_to "View Orders", "/orders" if current_user %>
    </div>
  </div>
  <body>
    <%= flash[:notice] %>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
